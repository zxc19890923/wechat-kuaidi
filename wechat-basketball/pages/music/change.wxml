<!--pages/music/change.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
    <view class="pages">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__bd">快递姓名: {{name}}</view>
                </view>
                <view class="weui-cell">
                    <view class="weui-cell__bd">评分信息: ⭐️️️️️️️⭐️️️️️️️⭐️️️️️️️⭐️️️️️️️⭐️️️️️️️</view>
                </view>
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                            <view class="picker">
                            选择时间: {{time}}
                            </view>
                        </picker>
                    </view>
                </view>
                <view class="weui-cell">
                   <view class="weui-cell__bd">
                        <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                            <view class="picker">
                            选择日期: {{date}}
                            </view>
                        </picker>
                     </view>
                </view>
            </view>
            <view class="weui-flex" style="padding-top: 20px">
                <view class="weui-flex__item" style="text-align: center">
                    <button formType="submit" class="weui-btn" type="primary" size="mini">下单</button>
                </view>
            </view>
    </view>
</form>
